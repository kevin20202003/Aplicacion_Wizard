<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicacion_Wizard.Views.Step1Page">
    <StackLayout Padding="20">
        <Label Text="Step 1: Personal Details" FontSize="Large" />
        <Entry Placeholder="Enter your name" x:Name="NameEntry" />
        <Entry Placeholder="Enter your email" x:Name="EmailEntry" />
        <Button Text="Next" Clicked="OnNextButtonClicked" />
    </StackLayout>
</ContentPage>